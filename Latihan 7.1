def cek_anagram(kata1, kata2):
    kata1 = kata1.lower()
    kata2 = kata2.lower()
    
    count_kata1 = {}
    for huruf in kata1:
        count_kata1[huruf] = count_kata1.get(huruf, 0) + 1
    
    for huruf in kata2:
        if huruf in count_kata1:
            count_kata1[huruf] -= 1
        else:
            return False
    
    for value in count_kata1.values():
        if value != 0:
            return False
    
    return True

kata1 = input("Masukkan kata pertama: ")
kata2 = input("Masukkan kata kedua: ")

if cek_anagram(kata1, kata2):
    print(f"{kata1} dan {kata2} adalah anagram.")
else:
    print(f"{kata1} dan {kata2} bukan anagram.")
